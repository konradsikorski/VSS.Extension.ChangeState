{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "amd",
        "moduleResolution": "node",
        "target": "es5",
        "sourceMap": false,
        "outFile": "./src/app.js",
        "removeComments": true,
        "noImplicitAny": true,
        "noImplicitReturns" : true,
        // turn strict on to check errors
        "strict" : false,
        "skipLibCheck": true,
        // "outDir": "build/",
        "watch": true,
        "rootDir": "./",
        "types": [
            "vss-web-extension-sdk"
        ]	
    },
    "include": [
        "src/**/*"
    ],
}